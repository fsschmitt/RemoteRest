<configuration>
  <system.runtime.remoting>
    <application>
      <client>
        <wellknown
          type="IOrderManager, Common"
          url="tcp://localhost:9000/Server/OrderServer"
        />
      </client>
      <channels>
        <channel ref="tcp" port="0">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>
